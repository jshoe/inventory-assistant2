<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jonathan.inventoryassistant.MakeNewGrp">

    <TextView android:text="@string/new_item" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/new_item"
        android:textSize="25sp"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemName"
        android:textSize="25sp"
        android:hint="enter item name here"
        android:layout_below="@+id/new_item"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/makeButton"
        android:background="#008000"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/itemName"
        android:layout_alignEnd="@+id/itemName"
        android:onClick="makeNewItem" />

    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Items"
        android:id="@+id/deleteAllButton"
        android:background="#ff807c10"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/groupName"
        android:layout_toLeftOf="@+id/makeButton"
        android:onClick="deleteAllItems"
        android:layout_marginRight="20dp" />-->

</RelativeLayout>