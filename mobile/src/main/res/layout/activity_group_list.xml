<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/topLayout"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#fefefe"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clipToPadding="false"
    tools:context="com.example.jonathan.inventoryassistant.GroupList">

    <TextView android:text="Your groups:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/make_new"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupList"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/initiate_scan"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/make_new" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Groups"
        android:id="@+id/initiate_scan"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:elevation="30dp"
        android:paddingLeft="17dip"
        android:paddingRight="17dip"
        android:background="@drawable/round_button_blue"
        android:onClick="startGroupsScan"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/groupList" />
</RelativeLayout>
