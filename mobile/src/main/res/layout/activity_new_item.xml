<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context="com.example.jonathan.inventoryassistant.NewGroup">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemName"
        android:textSize="25sp"
        android:layout_marginTop="52dp"
        android:hint="Item name"
        android:background="@drawable/edit_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/done"
        android:id="@+id/makeButton"
        android:background="@drawable/round_button_green"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/itemName"
        android:layout_alignEnd="@+id/itemName"
        android:onClick="makeNewItem" />

    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Items"
        android:id="@+id/deleteAllButton"
        android:background="@drawable/round_button_yellow"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/itemName"
        android:layout_toLeftOf="@+id/makeButton"
        android:onClick="deleteAllItemsInGroup"
        android:layout_marginRight="20dp" />
    -->

</RelativeLayout>